{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row page">
            <div class="search-div col-sm-2">
                <input autocomplete="off" class="search-bar" placeholder="Recherche"/>
                <div id="autocomplete" class="search-list">
                </div>
            </div>
            <div class="content col-sm-8">
                <div class="row">
                    <div class="room-links tab">
                        {# UN id='defaultOpen' DOIT ETRE MIS SUR LE PREMIER ELEMENT DANS LE CAS OU PLUSIEURS PIECES SONT LA DE BASE
                        DONC A PRIORI IL NE FAUDRA PAS LE METTRE #}
                        <a data-toggle="modal" href="#myRoomCategoryModal"
                           class="add-room btn btn-primary btn-lg">Ajouter une pièce</a>
                    </div>
                    <div class="col-xs-8 divRooms">
                        <button class="add-item">Ajouter un meuble</button>
                    </div>
                </div>

                <button type="button" class="btn btn-default btn-modal-recap pull-right" data-toggle="modal"
                        data-target=".modal-recap-lg">
                    <span class="glyphicon glyphicon-list-alt">Imprimer votre liste</span>
                </button>

                <div class="modal right fade fade modal-recap-lg " tabindex="-1" role="dialog"
                     aria-labelledby="myLargeModalLabel">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                            aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title"> Récapitulatif </h4>
                            </div>
                            <div class="modal-body">
                                <p>{# ici sera inscrit dans le marbre le récapitulatif du déménagement #}
                                    trois chaises peau de cougar</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->

                {# changer la ligne en dessous en dynamique mac #}
                <li class="recap-item">Aie Aie Aie</li>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="myRoomCategoryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Ajouter une pièce</h4>
                        </div>
                        <div class="modal-body row">
                            {% for roomCategory in roomCategories %}
                                <div data-id="{{ roomCategory.id }}"
                                     class="roomCategoryModal col-md-6 text-center">{{ roomCategory.name }}</div>
                            {% endfor %}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>
        <div class="recap col-sm-2">

        </div>
    </div>
{% endblock %}
